<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<shortcuts>

    <skipIfNotSupported/>

    <programGroup defaultName="Elios" location="applications"/>

	<shortcut
			     name="Elios"
			     programGroup="yes"
			     desktop="yes"
			     applications="no"
			     startMenu="yes"
			     startup="no"
			     target="java"
				 commandLine="-jar &quot;$INSTALL_PATH/elios-all.jar&quot;"
			     workingDirectory="$HOME"
			     description="Elios"
			     type="Application"
			     encoding="UTF-8"
			     initialState="normal">   
			     <createForPack name="Base"/>     
	   </shortcut>

    <shortcut
            name="Elios@ver@ Html Documentation"
            programGroup="yes"
            desktop="no"
            applications="no"
            startMenu="no"
            startup="no"
            target="$INSTALL_PATH\doc\Elios\html\index.html"
            commandLine=""
            description="This opens a WebBrowser to look into the Elios @build.number@ (HTML) user documentation">

        <createForPack name="Doc"/>
    </shortcut>

    <shortcut
            name="Elios@ver@ Java Documentation"
            programGroup="yes"
            desktop="no"
            applications="no"
            startMenu="no"
            startup="no"
            target="$INSTALL_PATH\doc\Elios\javadoc\index.html"
            commandLine=""
            description="This opens a WebBrowser to look into the Elios @build.number@ (Java) developer documentation">

        <createForPack name="JavaDoc"/>
    </shortcut>

    <shortcut
            name="Elios@ver@ Uninstaller"
            programGroup="yes"
            desktop="no"
            applications="no"
            startMenu="no"
            startup="no"
            target="$INSTALL_PATH\Uninstaller\uninstaller.jar"
            commandLine=""
            iconFile="%SystemRoot%\system32\SHELL32.dll"
            iconIndex="31"
            description="This uninstalls Elios @build.number@">

        <createForPack name="Core"/>
    </shortcut>

</shortcuts>