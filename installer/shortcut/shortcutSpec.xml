<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<shortcuts>

    <skipIfNotSupported/>

    <programGroup defaultName="Elios" location="applications"/>

	<shortcut
			     name="Elios"
			     programGroup="yes"
			     desktop="yes"
			     applications="no"
			     startMenu="yes"
			     startup="no"
			     target="javaw"
				 commandLine="-jar &quot;$INSTALL_PATH/elios-all.jar&quot;"
			     workingDirectory="$HOME"
			     description="Elios"
			     type="Application"
			     encoding="UTF-8"
			     initialState="normal"
			     iconFile="$INSTALL_PATH\elios_e.ico">   
			     <createForPack name="Base"/>     
	   </shortcut>

    <shortcut
            name="Elios Html Documentation"
            programGroup="yes"
            desktop="no"
            applications="no"
            startMenu="no"
            startup="no"
            target="$INSTALL_PATH\doc\html\UserGuide.html"
            commandLine=""
            description="This opens a WebBrowser to look into the Elios (HTML) user documentation">

        <createForPack name="Docs"/>
    </shortcut>

    <shortcut
            name="Elios Java Documentation"
            programGroup="yes"
            desktop="no"
            applications="no"
            startMenu="no"
            startup="no"
            target="$INSTALL_PATH\javadoc\index.html"
            commandLine=""
            description="This opens a WebBrowser to look into the Elios (Java) developer documentation">

        <createForPack name="JavaDoc"/>
    </shortcut>

    <shortcut
            name="Elios Uninstaller"
            programGroup="yes"
            desktop="no"
            applications="no"
            startMenu="no"
            startup="no"
            target="$INSTALL_PATH\Uninstaller\uninstaller.jar"
            commandLine=""
            iconFile="%SystemRoot%\system32\SHELL32.dll"
            iconIndex="31"
            description="This uninstalls Elios">

        <createForPack name="Base"/>
    </shortcut>

</shortcuts>